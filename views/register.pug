extends layout

block content
    article.container-fluid.d-flex.align-items-center.justify-content-center.article-main
        div.card.text-center.col-3
            div.card-body.p-5
                if message
                    h6.card-title=message
                form(method="post", action='/register')
                    div.mb-3
                        input.form-control(type="text", name="username", placeholder="Username", required)
                    div.mb-3
                        input.form-control(type="password", name="password", placeholder="Password", required)
                    button.btn.btn-outline-light.col-12(type="submit") SIGN UP
                    div
                        p.mb-0.mt-2 Already a member?
                        a(href="/login") Log In